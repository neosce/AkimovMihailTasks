@using DealShop.Models;
@{
    Layout = null;

    AuthenticationUser authenticationUser = new AuthenticationUser();
    string email = null, pass = null;


    if (IsPost)
    {

        #region AuthUser
        email = Request["email"];
        pass = Request["pass"];
        bool authUser = authenticationUser.GetAuthUser(email, pass);
        if (authUser)
        {
            FormsAuthentication.SetAuthCookie(email, createPersistentCookie: true);
            Response.Redirect("~");
        }
        #endregion




    }
}

