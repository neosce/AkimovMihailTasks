@using EPAM.ListUserAward.WebPages.Models;
@using EPAM.ListUserAward.WebPages.Controller;
@using EPAM.ListUser.Ioc;
@{
    Layout = null;

    string errorMessage = null;

    int _count = 1;

    LoginController loginController = new LoginController();
    var userLogic = DependencyResolver.UserLogic;
    var awardLogic = DependencyResolver.AwardLogic;
    var _authModel = new AuthModel();
    var messageRole = "";

    double A = 0;
    double B = 0;

    double? res = null;

    foreach (var authEmail in _authModel.GetAll())
    {
        if (authEmail.Email == User.Identity.Name)
        {
            messageRole = authEmail.UserRights;
        }
    }

    if (IsPost)
    {
        if (!double.TryParse(Request["A"], out A) || !double.TryParse(Request["B"], out B))
        {
            errorMessage = "Incorrect values!";
        }
        else
        {
            errorMessage = null;
            res = A + B;
        }

        //A = double.Parse(Request["A"]);
        //B = double.Parse(Request["B"]);
    }

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/wwwroot/css/IndexStyle.css" rel="stylesheet" />
    <title>EPAM.UserAward</title>
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-light bg-light fixed-top">
        <a class="navbar-brand" href="#">
            <img class="imgLogo" src="https://www.bloomreach.com/binaries/ninecolumn/content/gallery/bloomreach.com_2/partners/solution-partners/epam_logo_full_color_rgb.png" width="80" height="30" alt="logo">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-list-4" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbar-list-4">
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        @User.Identity.Name
                        <img src="https://s3.eu-central-1.amazonaws.com/bootstrapbaymisc/blog/24_days_bootstrap/fox.jpg" width="40" height="40" class="rounded-circle">
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="#">Dashboard</a>
                        <a class="dropdown-item" href="#">Edit Profile</a>
                        <a id="btn_logOut" class="dropdown-item" href="#">Log Out</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
    @if (errorMessage != null)
    {
        <div class="alert alert-danger">@errorMessage</div>
    }
    <div>
        @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin") || User.IsInRole("User"))
        {
            <div aria-live="polite" data-autohide="true" aria-atomic="true" style="position: relative;">
                <div class="toast" style="position: absolute; top: 100px; right: 50px; box-shadow: 0 0 15px rgba(0,0,0,0.3);">
                    <div class="toast-header" style="width: 300px;">
                        <img src="..." class="rounded mr-2" alt="...">
                        <strong class="mr-auto">Hello! @User.Identity.Name</strong>
                        <small>1 sec ago</small>
                        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="toast-body" style="color: white; background-color: #83d1db;">
                        @messageRole
                    </div>
                </div>
            </div>
        }
    </div>
    <form action="~/index.cshtml" method="post">
        <div>
            <label>A:</label>
            <input class="form-control" type="text" name="A" id="A" value=@A style="width:250px" />
        </div>
        <br />
        <div>
            <label>B:</label>
            <input class="form-control" type="text" name="B" id="B" value=@B style="width:250px" />
        </div>
        <br />
        <button class="btn btn-dark" style="width:250px; text-align:center">Add</button>
    </form>
    @if (res != null)
    {
        <br />
        <div class="alert alert-info">Result: @res</div>
    }

    <br />
    <button id="btn_increase" class="btn btn-secondary" style="width:250px">Count</button>
    <div class="alert alert-dark">Count: @Counter.Value</div>

    <br />
    <button id="btn_signout" class="btn btn-dark" style="width:250px">Sign out</button>

    <main role="main" class="container">
        <div class="my-3 p-3 bg-white rounded box-shadow">
            <h6 class="border-bottom border-gray pb-2 mb-0">Table user-award</h6>
            <div class="media text-muted pt-3 border-bottom border-gray">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Age</th>
                            <th>Award</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in userLogic.GetAll())
                        {
                        <tr>
                            <td>@(_count++)</td>
                            <td>@user.Name</td>
                            <td>@user.Age</td>
                            <td>
                                @if (user.userAward != null)
                                {
                                    foreach (var awardUser in user.userAward)
                                    {
                                        foreach (var award in awardLogic.GetAll())
                                        {
                                            if (awardUser == award.Id)
                                            {
                                                @award.Title<br />

                                            }
                                        }
                                    }
                                }
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            <small class="d-block text-right mt-3">
                <a href="#">All updates</a>
            </small>
        </div>
    </main>

    <script src="~/Scripts/jquery-3.0.0.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/popper.js"></script>

    <script>
        $('#btn_increase').click(function () {
            location.href = "/Pages/IncreaseCounter";
        })

        $('#btn_logOut').click(function () {
            location.href = "/Pages/SignOut";
        })

        $('.toast').toast(
            {
                animation: true,
                autohide: true,
                delay: 5000
            })
        $('.toast').toast('show');
    </script>

</body>
</html>
